%%
h=firls(200,[0 0.005 0.01 0.03 .04 .5]*2,[0 0 1 1 0 0]);
fvtool(h);

%%
Fs = 50;
fz = 0;
fo = 1;
fs = 4;
fp = 3;
fc = (fs+fp)/2;
dp = 0.1;
ds = 0.1;
[N, Wn, BTA, FILTYPE] = kaiserord([fz fo fp, fs], [0 1 0], [ds dp, ds], Fs);
h = fir1(N, Wn, FILTYPE, kaiser(N+1,BTA), 'noscale');
fvtool(h);

%%
h = fir2(100,[0 0.48 0.48 1],[0 0 1 1]);
fvtool(h);

%%
H = [ones(100)]

%%
[H,w] = freqz(h,1);
plot(w/2/pi, abs(H))